#include <stdio.h>
#include <math.h>

int main()
{
    int n; // tinh bang ngay
    int a; // tinh bang gio
    
    do{
        printf("son ngay lam viec n = ");
        scanf("%d",&n);
    }while(n<0 || n>30);
    
    printf("luong = %d\n",n*400);
    
    printf("so gio lam them a = ");
    scanf("%d",&a);
    
    if(a<=50){
        printf("so tien lam them = %d\n",a*250);
        printf("tong so tien nhan = %d",n*400+a*250);
    }
    else{
        printf("so tien lam them = %d\n",a*200);
        printf("tong so tien nhan = %d",n*400+a*200);
    }
    
    return 0;
}
